<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@drawable/colorselect" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="上传到  : "
            android:textSize="13dp"
            android:textColor="@color/black" 
            android:focusable="false"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/cloud_dir_icon"
            android:focusable="false"
            />
         <TextView
             android:id="@+id/pop_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 我的云盘 "
            android:textSize="13dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:focusable="false"
             />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换 "
            android:textSize="13dp"
            android:focusable="false"
            android:textColor="@color/normal_blue" />
         <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@drawable/common_icon15"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/colorselect3" >

        <TextView
            android:id="@+id/pop_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:focusable="false"
            android:textSize="18dp"
            android:text="开始上传(1)" />
    </LinearLayout>

</LinearLayout>