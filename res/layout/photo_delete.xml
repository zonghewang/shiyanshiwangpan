<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/photo_delete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="确认将这个文件夹删除?"
        android:textColor="@color/normal_blue"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_blue" />

    <ListView
        android:id="@+id/photo_delete_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/photo_delete_lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/jd_delete_btn"
        android:clickable="true"
        android:drawable="@drawable/delog_icon"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/photo_delete_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delog_icon" />

        <TextView
            android:id="@+id/photo_delete_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 确定删除"
            android:textColor="@color/red" />
    </LinearLayout>

    <Button
        android:id="@+id/photo_delete_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dialog_cancle_btn2"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/grey" />

</LinearLayout>