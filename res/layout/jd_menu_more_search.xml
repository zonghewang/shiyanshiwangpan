<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="搜索"
        android:textColor="@color/normal_blue"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_blue" />

    <LinearLayout
        style="@style/renameEditText"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/jd_menu_more_search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:ems="10"
            android:hint="请输入你要查找的文件名" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jd_menu_more_search_quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancle_btn2"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/grey" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <Button
            android:id="@+id/jd_menu_more_search_sou"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancle_btn2"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/grey" />
    </LinearLayout>

</LinearLayout>