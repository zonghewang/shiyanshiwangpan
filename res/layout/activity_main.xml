<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity" >
    

    <LinearLayout
        android:id="@+id/MainAvtivityHead"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MainActivityNetDisk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/title_tab_normal"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="网盘"
            android:textColor="#ff00ddff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/MainActivityPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_tab_normal"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="相册"
            android:textColor="#ff00ddff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/MainActivityOther"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_tab_normal"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="其他"
            android:textColor="#ff00ddff"
            android:textSize="15sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/MainActivityViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/MainAvtivityHead" >
    </android.support.v4.view.ViewPager>
		<ImageView android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_about"/>
   

</RelativeLayout>