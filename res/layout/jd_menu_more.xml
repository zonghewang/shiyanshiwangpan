<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/jd_menu_more_up"
            style="@style/operationBtn" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/more_uploaded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="最近上传"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bottom_menu_line" />

        <LinearLayout
            android:id="@+id/jd_menu_more_dow"
            style="@style/operationBtn" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/more_downloaded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已下载文件"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bg_gray"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/jd_menu_more_newfile"
            style="@style/operationBtn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/more_create_folder"
                android:gravity="center"
                android:text="新建文件夹"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bottom_menu_line" />

        <LinearLayout
            android:id="@+id/jd_menu_more_sort"
            style="@style/operationBtn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/more_sort"
                android:gravity="center"
                android:text="排序"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bottom_menu_line" />

        <LinearLayout
            android:id="@+id/jd_menu_more_search"
            style="@style/operationBtn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/more_search"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bottom_menu_line" />

        <LinearLayout
            android:id="@+id/jd_menu_more_refrsh"
            style="@style/operationBtn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/more_refresh"
                android:gravity="center"
                android:text="刷新"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>