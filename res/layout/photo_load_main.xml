<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/photo_load_mian_main"
    android:orientation="vertical" >
     <ListView android:id="@android:id/list"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          >
          </ListView>

    <HorizontalScrollView
        android:id="@+id/photo_load_main_hs"
        android:layout_width="match_parent"
        android:background="@color/shadow"
        android:layout_height="40dp"
        android:scrollbars="none" >

        <FrameLayout
            android:id="@+id/photo_load_main_locationID"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal" >
        </FrameLayout>
    </HorizontalScrollView>
  
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <ListView 
        android:id="@+id/photo_load_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerDividersEnabled="true"
        android:listSelector="@drawable/btn_bottom" 
        > 
    </ListView>
     <ScrollView
        android:id="@+id/Photo_load_main_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">
        <LinearLayout
            android:id="@+id/Photo_load_main_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >    
        </LinearLayout>
    </ScrollView>
    
    </RelativeLayout>

</LinearLayout>